<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF3E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hayvan Türü Seçin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerHayvan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp" />

        <TextView
            android:id="@+id/txtMevcutAdet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eldeki: 0 adet"
            android:textSize="18sp"
            android:textColor="#4E342E"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edtMiktar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Miktar girin"
            android:inputType="number"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:layout_marginTop="12dp"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnEkle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+ Ekle"
                android:textSize="18sp"
                android:backgroundTint="#81C784"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCikar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- Çıkar"
                android:textSize="18sp"
                android:backgroundTint="#E57373"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGeri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geri Dön"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:backgroundTint="#BDBDBD"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/txtHayvanOzet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="Hayvan Özeti"
            android:textSize="18sp"
            android:textColor="#3E2723"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:elevation="4dp"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
