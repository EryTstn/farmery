<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4C3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ürün Seçimi Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün Seçiniz:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/urunSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <!-- Seçilen Ürün ve Mevcut Miktar -->
        <TextView
            android:id="@+id/textSecilenUrun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün: -"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textMevcutMiktar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mevcut Miktar: -"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Sayı Girme Alanı -->
        <EditText
            android:id="@+id/editMiktar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Miktar giriniz"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp"
            android:backgroundTint="#81C784"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Ekle ve Azalt Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnEkle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ekle"
                android:backgroundTint="#FFD54F"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAzalt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Azalt"
                android:backgroundTint="#FFB74D"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Geri Dön Butonu -->
        <Button
            android:id="@+id/btnGeriDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geri Dön"
            android:layout_marginTop="24dp"
            android:backgroundTint="#A5D6A7"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>
