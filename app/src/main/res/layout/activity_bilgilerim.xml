<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4C3"
    tools:context=".BilgilerimActivity">

    <Button
        android:id="@+id/btnKisiselBilgi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kişisel Bilgilerim"
        android:layout_margin="16dp"
        android:backgroundTint="#A5D6A7"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSifreDegistir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Şifre Değiştir"
        android:layout_below="@id/btnKisiselBilgi"
        android:layout_margin="16dp"
        android:backgroundTint="#FFD54F"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAnasayfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anasayfa"
        android:layout_below="@id/btnSifreDegistir"
        android:layout_margin="16dp"
        android:backgroundTint="#FFB74D"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>
